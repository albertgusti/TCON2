extends layout

block content
	.container(style="text-align:center;")
		.row
			.col-md-4.col-md-offset-4
				if pageData && pageData.err
					p.alert.alert-danger.fade.in(role="alert")
						span !{pageData.err}
				else
					p.alert.alert-success.fade.in(role="alert")
						span Your account has been activated. <br> You can now &nbsp;
							a.btn.btn-default(href="/") Login